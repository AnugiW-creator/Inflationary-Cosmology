$PrePrint = TraditionalForm;
Clear[X, Y, Z]

(*Define coordinates*)
grr = 1/(1 - k r^2);
X = r Cos[\[Phi]];
Y = r Sin[\[Phi]];

eq = D[X, r]^2 + D[Y, r]^2 + D[Z[r], r]^2 == grr // Simplify

Zr = Z[r] /. DSolve[eq /. k -> 1, Z[r], r] /. C[1] -> 0

Plot3D[Zr /. r -> Sqrt[x^2 + y^2], {x, -1, 1}, {y, -1, 1}, 
 BoxRatios -> 1, PlotRange -> All, ColorFunction -> "CandyColors", 
 PlotStyle -> Directive[Specularity[White, 30]], Axes -> False, 
 Boxed -> False]

Zrflat = Z[r] /. DSolve[eq /. k -> 0, Z[r], r] /. C[1] -> 0
Plot3D[Zrflat /. r -> Sqrt[x^2 + y^2], {x, 0, 2}, {y, 0, 2}, 
 BoxRatios -> 1, PlotRange -> All, ColorFunction -> "CandyColors", 
 PlotStyle -> Directive[Specularity[White, 30]], Axes -> False, 
 Boxed -> False]

Zrneg = Z[r] /. DSolve[eq /. k -> -1, Z[r], r] /. C[1] -> 0

Plot3D[I Zrneg /. r -> Sqrt[x^2 - y^2], {x, -2, 2}, {y, -2, 2}, 
 BoxRatios -> 1, PlotRange -> All, ColorFunction -> "CandyColors", 
 PlotStyle -> Directive[Specularity[White, 30]], Axes -> False, 
 Boxed -> False]

Plot3D[x^2 - y^2, {x, -5, 5}, {y, -5, 5}]
